    </servlet>
    <servlet-mapping>
        <servlet-name>adminProductDetailServlet</servlet-name>
        <url-pattern>/admin/product/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>adminProductUpdateFormServlet</servlet-name>
        <servlet-class>mymall.controller.AdminProductUpdateFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminProductUpdateFormServlet</servlet-name>
        <url-pattern>/admin/product/updateForm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>adminProductUpdateServlet</servlet-name>
